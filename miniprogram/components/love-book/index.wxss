.bookTab {
	width: 41%;
	height: 400rpx;
	/* background-color: yellow; */
	border-radius: 20rpx;
	box-shadow: 0px 6px 22px 12px rgba(5, 14, 28, 0.08);
	padding: 24rpx;
	margin-bottom: 24rpx;
}

.loveBook {
	display: flex;
	justify-content: left;
	padding: 30rpx 42rpx;
	flex-wrap: wrap;
	align-content: flex-start;
}

.icon_add {
	width: 180rpx;
	height: 180rpx;
}

.only_book {
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

.data_list {
	display: flex;
	flex-direction: column;
	padding: 24rpx;
	position: relative;
}

.icon_loved {
	width: 80rpx;
	height: 80rpx;
}

.data_list .line_loved {
	height: 6rpx;
	width: 160rpx;
	background-color: red;
}

.data_list .bookLoved_content {
	display: flex;
	align-items: center;
}

.data_list .book_title {
	font-size: 40rpx;
	font-weight: 700;
	color: #1A2A43;
}
.date_title{
	text-align:start;
	font-size: 10px;
	color: #959CBA;
}

.data_list .book_text {
	font-size: 30rpx;
	color: #959CBA;
	padding: 6rpx 0;
	overflow: hidden;  
	white-space: nowrap; 
	text-overflow: ellipsis; 
}

.data_list .book_money {
	font-size: 36rpx;
	font-weight: 600;
	color: red;
	margin-top: 12rpx;
	margin-bottom: 20rpx;
}

.data_list .book_user {
	float: right;
}

.data_list .bookLoved_content {
	margin: 16rpx;
}

.mask {
	width: 100%;
	height: 100%;
	position: absolute;
	background-color: rgb(0, 0, 0);
	z-index: 99;
	top: 0;
	left: 0;
	opacity: 0.8;
	border-radius: 20rpx;
	display: flex;
	justify-content: center;
	align-items: center;

}

.mask-content-edit {
	border-radius: 60rpx;
	background-color: white;
	margin-right: 10px;
	/* opacity: 1; */
}
.mask-content-del {
	margin-left: 10px;
	border-radius: 60rpx;
	background-color: white;
	/* opacity: 1; */
}

.mask-img {
	width: 40px;
	height: 40px;
}
.mask-content-all{
	display: flex;
}