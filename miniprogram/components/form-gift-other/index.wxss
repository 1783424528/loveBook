.form_item {
    display: flex;
    margin-left: 36rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #959CBA;
    align-items: center;
}
.form_item .form_label {
    margin-right: 60rpx;
    width: 80rpx;
}

.form_item .picker {
    width: 520rpx;
}
.text_line {
    margin-left: 36rpx;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #f8f8f8;
}
.record_user {
    margin-left: 36rpx;
}
.record_user .line_record {
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #959CBA;
}
.record_user .line_record input {
    height: 100%;
}
.add_button {
    width: 85%;
    margin: 80rpx auto;
    height: 60rpx;
    line-height: 60rpx;
    /* background-color: blue; */
    border-radius: 40rpx;
    border: 1px solid red;
    color: red;
    text-align: center;
}
.fixed {
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    background-color: #fff;
    z-index: 999;
}
.add_button_fix {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: red;
    border-radius: 40rpx;
    color: #fff;
    text-align: center;
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
}
.cover {
    width: 100%;
    height: 100rpx;
}