.form_item {
    display: flex;
    margin-left: 36rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #959CBA;
    align-items: center;
}
.form_item .form_label {
    margin-right: 60rpx;
    width: 80rpx;
}
.form_item_textarea .text_area {
    white-space: nowrap;
    margin-right: 60rpx;
    width: 80rpx;
}
.form_item_textarea {
    display: flex;
    /* justify-content: center; */
    margin-left: 36rpx;
    padding-top: 36rpx;
    border-bottom: 1px solid #959CBA;
    position: relative;
}
.form_item_textarea .form_desNum {
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
}
.form_item .picker {
    width: 520rpx;
}
.fixed {
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    background-color: #fff;
    z-index: 999;
}
.add_button_fix {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: red;
    border-radius: 40rpx;
    color: #fff;
    text-align: center;
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
}
.cover {
    width: 100%;
    height: 100rpx;
}
